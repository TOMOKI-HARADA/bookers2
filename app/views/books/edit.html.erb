<div class="container">
<div class="row">
  <div class="col-md-8 " >
      <h1>Editing Book</h1>

<%= form_with model:@book, local: true do |f| %>
  <h4>Title</h4>
  <%= f.text_field :title %>
  
  <h4>Opinion</h4>
  <%= f.text_area :body %>
  <%= f.submit 'Update Book' %>
  <%= link_to "Show", @book, class: "book_#{@book.id}" %>
    <%= link_to "Back", books_path, class: "back" %>
<% end %>
  
    </div>
  </div>
</div>
