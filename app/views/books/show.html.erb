
<div class="container">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', books: @books %> 
      <h2>New book</h2>
      <%= form_with model:@book_new, local:true do |f| %>

<h4>title</h4>
<%= f.text_field :title %>

<h4>Opinion</h4>
<%= f.text_area :body %>
<%= f.submit 'Create Book' %>
<% end %>
     
    </div>
    <div class="col-md-8 offset-md-1">
      <h1>Book detail</h1>
     <table class='table table-hover table-inverse'>
       <thead>
    
        <tr>
          <td><%= attachment_image_tag @user, :profile_image, :fill, 30, 30, fallback: "no_image.jpg"%></td>
          <td><%= link_to @user.name, user_path(@user) %></td>
          <td><%= @book.title %></td>
          <td><%= @book.body %></td>
          <% if @book.user_id == current_user.id %>
            <td><%= link_to "Edit", edit_book_path(@book), class:"btn btn-success"%></td>
            <td><%= link_to "Destroy", book_path(@book), method: :delete, data: {confirm: "本当に消しますか？"}, class:"btn btn-danger" %></td>
          <% end %>
        </tr>
      </table>
    </div>
  </div>
</div>



