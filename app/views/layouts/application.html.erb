<!DOCTYPE html>
<html>
  <head>
    <title>Bookers2</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
   
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1">
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>


  <body>
    
     <header>
      <nav class="navbar navbar-inverse">
      <div class="container-fluid">
        <div class="navbar-header">
        <a class="navbar-brand" href="#">Bookers</a>
        </div>
        <ul class="nav navbar-nav navbar-right">
 
    <% if user_signed_in? %>
      <li class="nav-item">
       <%= link_to "ログアウト", destroy_user_session_path, method: :delete %>
      </li>
      
      <li class="nav-item">
    <%= link_to "Users", users_path, class: "btn btn-secondary" %>
      </li>
      <li class="nav-item">
   <%= link_to "books", books_path, class: "glyphicon glyphicon-home" %>
      </li>
      <li>
    <%= link_to "home", "/users/#{current_user.id}", class: "bi bi-house" %> 
        
      </li>
     
    
    <% else %>
      <li class="nav-item">
       <%= link_to "新規登録", new_user_registration_path, class: "glyphicon glyphicon-home" %>
      </li>

      <li class="nav-item">
      
<i class="far fa-house"></i><%= link_to "ログイン", new_user_session_path, class: "btn btn-secondary" %>
      </li>
      <li>
     <%= link_to "about", about_path, class: "btn btn-secondary"  %>
      </li>
      <li class="nav-item">
    <%= link_to   top_path, class: "my-bt" do %><i class="far fa-house"></i> top<% end %></li> 
      </li>


    <% end %>
    </ul>
        </nav>

      </div>
      
    </header>
    
    <%= yield %>
     <footer>
          <div class='container'>
            <div class='row'>
              <div class='col-xs-3 col-xs-offset-9'>
                <p>CopyRight Infratop.inc</p>
              </div>
            </div>
          </div>
    </footer>
  </body>
</html>
